@model ClubFilterViewModel

<h1>Index - club</h1>

<div class="container">
    <div class="row">
        <form asp-controller="Clubs" asp-action="Index">
            <div class="col-2"> 
              <label for="searchString">Szukaj sportu:</label>
              <input type="text" name="SportName" value="@Model?.SportName"/>
            </div>
            <div class="col-2"> 
              <label for="searchString">Szukaj klubu:</label>
              <input type="text" name="ClubName"  value="@Model?.ClubName"/>
            </div>
            <div class="col-2"> 
              <label for="searchString">Szukaj zawodnika:</label>
              <input type="text" name="PlayerSurename" value="@Model?.PlayerSurename"/>
            </div>
            <button type="submit" class="btn-btn light"> Szukaj </button>
        </form>
    </div>

    <a class="btn btn-primary" asp-controller="Clubs" asp-action="Create">Stwórz nowy klub</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nazwa</th>
                <th scope="col">Sport</th>
                <th scope="col">Zawodnicy</th>
                <th scope="col">Akcje</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var club in Model.Clubs)
                {
                <tr>
                    <td>@club.ID</td>
                    <td>@club.Name</td>
                    <td>@club.Sport?.Name</td>

                    @foreach (var obj in club.Players)
                    {
                        <td>@obj.Name</td>
                        <td>@obj.Surename</td>

                    }
                    <td>
                        <a class="btn btn-light"></a>
                        <form asp-controller="Clubs" asp-action="Delete" method="post" asp-route-id="@club.ID">
                           <button type="submit" class="btn btn-danger" onclick="return confirm('Czy jesteś pewien?')"> Usuń</button>
                        </form> 
                    </td>
                </tr>
                }
        </tbody>
    </table>

</div>